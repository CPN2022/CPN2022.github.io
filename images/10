<!-- Data Layer Push -->
<script>
  var vipAuthType;
  window.udnVipEvent = window.udnVipEvent || [];

  fetch('/api/get_AuthType', {
    method: 'POST',
    headers: {
      Accept: 'application/json',
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ account: user_id, udngold: gold_id }),
  })
    .then(res => res.json())
    .then(function (data) {
      dataLayer.push({
        event: 'page_load',
        auth_type: data.identity,
        custom_name: data.custom_name,
      });
      console.log('identity', data.identity);
      vipAuthType = data.identity;
      authStatusCallback();
    });

  function authStatusCallback() {
    window.udnVipEvent.forEach(function (ii) {
      if (typeof vipAuthType === 'undefined') return;
      if (!ii.state) ii.event();
      ii.state = true;
    });
  }
</script>
<!-- End Data Layer Push -->
