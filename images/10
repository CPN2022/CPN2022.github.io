<style>
  .countdown-promotion {
    position: relative;
    z-index: 6;
    height: 0;
    background-color: #0b57c0; /* 背景延伸色 */
    background-image: url('https://p.udn.com.tw/upf/2020_vip/bd/curtain_pc_flight_0214.png'); /*電腦版圖片*/
    background-position: center;
    background-repeat: no-repeat;
    background-size: 1280px 80px;
    overflow: hidden;
    transition: height 0.3s linear, transform 0s linear;
  }

  .menu-open .countdown-promotion ~ .header {
    z-index: 5;
  }

  .countdown-promotion .close-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 0;
    color: #c7c7c7;
    font-size: 24px;
  }

  .countdown-promotion a {
    display: flex;
    height: 100%;
    align-items: center;
  }

  .countdown-promotion.open {
    height: 80px;
  }

  @media screen and (max-width: 1297px) {
    .countdown-promotion {
      background-position: center;
    }
  }

  @media screen and (max-width: 768px) {
    .countdown-promotion {
      background-image: url('https://p.udn.com.tw/upf/2020_vip/bd/curtain_mb_flight_0214.png'); /*手機版圖片*/
      background-position: top center;
      background-size: 600px 130px;
    }
    .countdown-promotion .close-btn {
      top: 7px;
      right: 7px;
      color: #351b31;
    }
    .countdown-promotion a {
      flex-flow: column wrap;
      padding: 0 10px;
    }
    .countdown-promotion.open {
      height: 130px;
    }
  }
</style>
<script>
  (function () {
    'use strict';

    var banner = document.createElement('section');
    banner.className = 'countdown-promotion';

    var bannerClose = document.createElement('span');
    bannerClose.className = 'btn close-btn';
    bannerClose.innerHTML = '<i class="i-close"></i>';

    var anchorLink = document.createElement('a');
    anchorLink.className = 'container';
    anchorLink.href = 'https://vip.udn.com/vip/cate/121915/122662?from=curtain'; // 連結
    anchorLink.target = '_self';
    anchorLink.innerHTML = '';

    banner.appendChild(bannerClose);
    banner.appendChild(anchorLink);

    document.body.prepend(banner);

    document.querySelector('.countdown-promotion .close-btn').addEventListener('click', function () {
      banner.classList.remove('open');
    });

    window.udnVipEvent = window.udnVipEvent || [];
    var cookieName = 'udn-vip-survey';
    var freq = 5; // 每天顯示次數
    var curtainEvent = {
      state: false,
      title: "2022新加坡航空展第一手解密", // 輸入活動名稱
      event: setAuthEvent(4), //【0.非會員】【1.一般會員】【2.付費會員】【3.一般會員+付費會員】【4.全部】【5.非訂戶】
    };
    window.udnVipEvent.push(curtainEvent);

    function openCurtainBanner() {
      if (typeof getCookie(cookieName) === 'undefined' || parseInt(getCookie(cookieName)) < freq ) {
        var current = typeof getCookie(cookieName) === 'undefined' ? 1 : parseInt(getCookie(cookieName)) + 1;
        banner.classList.add('open');
        document.cookie = cookieName + '=' + current + '; max-age=' + 60 * 60 * 24 + '; domain=' + document.location.host + '; path=/';
      }
    }
    function setAuthEvent(identity) {
      return function () {

       if (identity === 4) {
          openCurtainBanner();
          return;
        }
       if (identity === 5 && vipAuthType < 2 ) {
          openCurtainBanner();
          return;
        }
        if (typeof vipAuthType !== 'undefined' && identity === 3 && vipAuthType >= 1) {
          openCurtainBanner();
          return;
        }
        if (typeof vipAuthType !== 'undefined' && vipAuthType === identity) {
          openCurtainBanner();
        }

      };
    }

    console.log('curtain identity', vipAuthType);
  })();
</script>
